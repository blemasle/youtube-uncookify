{
    "manifest_version": 2,
    "name": "YouTube (un)cookify",
    "version": "0.1",

    "description": "Seamlessly switch between regular and privacy enhanced (youtube-nocookie.com) YouTube. Also provides a context menu for YouTube watch links.",

    "icons": {
        "16": "icons/icon-16.png",
        "64" : "icons/icon-64.png"
    },

    "permissions": [
        "tabs",
        "contextMenus"
    ],
    
    "page_action": {
        "default_title": "YouTube (un)cookify",
        "default_icon": {           
            "19" : "icons/icon-19.png",
            "38" : "icons/icon-38.png"
        },
        "show_matches": [
            "https://www.youtube.com/watch?v=*",
            "https://www.youtube-nocookie.com/embed/*"
        ]
    },

    "background": {
        "scripts": [ "uncookify.js" ]
    }
}